# ============================================================
# PRODUCTION ENVIRONMENT VARIABLES (VPS Deployment)
# ============================================================

# Node Environment
NODE_ENV="production"

# Clerk Authentication - PRODUCTION
# IMPORTANT: These are PLACEHOLDER values. Replace them on VPS!
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=CLERK_PROD_PUBLISHABLE_KEY_HERE
CLERK_SECRET_KEY=CLERK_PROD_SECRET_KEY_HERE
CLERK_WEBHOOK_SECRET=CLERK_PROD_WEBHOOK_SECRET_HERE
CLERK_DOMAIN=clerk.garritwulf.com
NEXT_PUBLIC_CLERK_DOMAIN=clerk.garritwulf.com

# Clerk URLs - Configure sign-in/sign-up paths
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# Database (PostgreSQL on VPS - GW-postgres)
# Note: These use container names for Docker network communication
DATABASE_URL="postgresql://DB_USER_HERE:DB_PASSWORD_HERE@GW-postgres:5432/garritwulf_db"
DIRECT_URL="postgresql://DB_USER_HERE:DB_PASSWORD_HERE@GW-postgres:5432/garritwulf_db"

# Redis (via Docker on VPS - GW-redis)
REDIS_URL="redis://GW-redis:6379"

# MinIO S3 Storage (GW-MinIO - Independent)
MINIO_ENDPOINT="GW-minio"
MINIO_PORT="9000"
MINIO_REGION="us-east-1"
MINIO_ACCESS_KEY="MINIO_ACCESS_KEY_HERE"
MINIO_SECRET_KEY="MINIO_SECRET_KEY_HERE"
MINIO_USE_SSL="false"
MINIO_BUCKET_NAME="garritwulf-media"

# Site URL
NEXT_PUBLIC_SITE_URL="https://garritwulf.com"
NEXT_PUBLIC_API_URL="https://garritwulf.com"

# Settings Encryption
SETTINGS_ENCRYPTION_KEY="SETTINGS_ENCRYPTION_KEY_HERE"
ENCRYPTION_KEY="ENCRYPTION_KEY_32_CHARS_HERE"

# ============================================================
# IMPORTANT NOTES:
# ============================================================
# 1. Update CLERK_WEBHOOK_SECRET after creating production webhook
# 2. Change DATABASE_URL password before deployment
# 3. Verify DNS records are configured in Clerk dashboard
# 4. This file should be uploaded to VPS as .env (not .env.production)
# ============================================================
